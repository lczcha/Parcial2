                <Image Source="https://image.freepik.com/iconos-gratis/cesta-de-la-compra-de-diseno-a-cuadros_318-50865.jpg" WidthRequest="38"/>
                <Image Source="https://image.freepik.com/iconos-gratis/cesta-de-la-compra-de-diseno-a-cuadros_318-50865.jpg" WidthRequest="38"/>
            </StackLayout>

        </StackLayout>

        <StackLayout Orientation="Horizontal" 
                     VerticalOptions="End"
                     HorizontalOptions="Center"
                     Margin="80"
                     Spacing="20">
            <Image Source="http://cdn.onlinewebfonts.com/svg/img_70457.png" WidthRequest="20"/>
            <Image Source="http://www.myiconfinder.com/uploads/iconsets/256-256-e797e8a571bcb53e2468922566d5095a.png" WidthRequest="20"/>
