<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taller2.Page2">
    
    <StackLayout Orientation="Vertical" 
                 Margin="10"
               HorizontalOptions="Center"
            
               WidthRequest="500">
        
        <Label Text="FORGOT PASSWORD"></Label>

        <StackLayout Orientation="Horizontal" 
              >
            <StackLayout Orientation="Vertical" 
               HorizontalOptions="Center"
               WidthRequest="500">
            
            <StackLayout Orientation="Horizontal" 
               HorizontalOptions="Center"
               WidthRequest="500">
            <Label Text="Email"></Label>
            </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Vertical" 
               HorizontalOptions="Center">
              <Image Source="https://www.shareicon.net/data/512x512/2016/04/07/746067_multimedia_512x512.png" WidthRequest="20"/>
            </StackLayout>
           

        </StackLayout>
        <Entry x:Name="botxemail"></Entry>
        <Button Text="RESET PASSWORD" x:Name="btnrpa" Clicked="Btnrpa_Click"/>
    </StackLayout>
</ContentPage>